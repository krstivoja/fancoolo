{
  "name": "fancoolo",
  "version": "1.0.0",
  "description": "A WordPress plugin with React frontend built using esbuild.",
  "main": "index.js",
  "scripts": {
    "build": "node build.js --production",
    "dev": "node build.js --watch",
    "build:scss": "node build-scss.js",
    "build:zip": "zip -r fancoolo.zip . -x@.distignore -x '*.zip'",
    "update:sass": "npm update sass && npm run build",
    "version-check": "npm list sass immutable"
  },
  "devDependencies": {
    "@jgoz/esbuild-plugin-livereload": "^2.1.3",
    "esbuild": "0.25.9",
    "esbuild-plugin-tailwindcss": "^2.1.0",
    "terser": "^5.41.0"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@tailwindcss/cli": "^4.1.13",
    "emmet-monaco-es": "^5.6.1",
    "immutable": "^5.1.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.3",
    "react-tag-autocomplete": "^7.5.1",
    "sass": "1.92.1",
    "tailwindcss": "^4.1.13"
  }
}
